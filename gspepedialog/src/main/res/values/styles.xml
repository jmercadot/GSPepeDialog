<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Custom styles for pepe dialog-->
    <style name="style_boton_generico" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@drawable/corner_boton_personalizado</item>
        <item name="android:textColor">@color/colorBlanco</item>
        <item name="android:paddingRight">60dp</item>
        <item name="android:paddingLeft">60dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="style_titulo_dialog" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyAlertDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/colorNegro</item>
        <item name="android:textColorPrimary">@color/colorPrimaryDark</item>
    </style>
</resources>